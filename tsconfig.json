{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
     "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*", "../*"]
    }
  },
"include": [
  "src/**/*.ts",
  "src/**/*.tsx",
  "src/**/*.vue",
  "nuxt.config.ts"
],
  "exclude": ["node_modules","./.nuxt/tsconfig.json" ]
}
